<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="1.6.0"
    client="site"
    method="upgrade">
<name>Jshopping Bestseller Products</name> 
	<creationDate>17.02.2012</creationDate>
    <author>MAXXmarketing GmbH</author>
    <authorEmail>marketing@maxx-marketing.net</authorEmail>
    <authorUrl>http://www.webdesigner-profi.de</authorUrl>
    <copyright></copyright>
    <license>Open Source License, GNU GPL</license>
    <version>3.3.1</version> 
	<description>Displays bestseller products of shop.</description>
	<files>
		<filename module="mod_jshopping_bestseller_products">mod_jshopping_bestseller_products.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>element/categories.php</filename>
	</files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_bestseller_products.ini</language>
		<language
            tag="de-DE">de-DE.mod_jshopping_bestseller_products.ini</language>
		<language
            tag="ru-RU">ru-RU.mod_jshopping_bestseller_products.ini</language>
    </languages>    
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field
                    name="count_products"
                    type="text"
                    label="COUNT"
                    default = "5"
                    description="THE NUMBER OF PRODUCTS IN ROW" />
                <field
                    name="show_image"
                    type="radio"
                    default="1"
                    label="SHOW PRODUCT IMAGE"
                    description="SHOW PRODUCT IMAGE">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field  
                    name="catids" 
                    type="categories" 
                    size="5" 
                    default=""                    
                    label="CATEGORIES" 
                    description="CATEGORIES" 
                    addfieldpath="/modules/mod_jshopping_bestseller_products/element"/>
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                               
            </fieldset> 
        </fields>
    </config>  
</extension>